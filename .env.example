# ============================================================================
# LINKEDIN POSTS INTEGRATION - SOCIABLEKIT API
# ============================================================================

# SociableKIT LinkedIn Feed API URL
# Get this from your SociableKIT dashboard: Options > Data feed
# Note: Requires SociableKIT paid plan for API access

VITE_SOCIABLEKIT_FEED_URL=https://data.accentapi.com/feed/YOUR_WIDGET_ID.json

# ============================================================================
# EXISTING ENVIRONMENT VARIABLES
# ============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key

# Supabase
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ElevenLabs Text-to-Speech
# Get your API key from: https://elevenlabs.io/
# Voice ID for British female voice (default: Alice)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=Xb7hH8MSUJpSbSDYk0k2

# Resend (Email)
RESEND_API_KEY=your_resend_api_key

# Resend Audience Segmentation
# Create these 3 audiences in your Resend dashboard
# General: Users signed up but no enrolled course
# PM Free: PM course enrolled, not paying
# PM Paid: PM course enrolled, paying
RESEND_AUDIENCE_GENERAL=
RESEND_AUDIENCE_PM_FREE=
RESEND_AUDIENCE_PM_PAID=
VITE_RESEND_AUDIENCE_GENERAL=
VITE_RESEND_AUDIENCE_PM_FREE=
VITE_RESEND_AUDIENCE_PM_PAID=

# API URL
VITE_API_URL=http://localhost:3001

# Server Port
PORT=3001
